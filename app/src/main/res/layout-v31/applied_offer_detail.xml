<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Training_Details">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bottom_navigation"
            app:itemBackground="@color/white"
            app:itemTextColor="@drawable/selector"
            app:itemIconTint="@drawable/selector"
            app:menu="@menu/menu3"
            android:layout_alignParentBottom="true"
            />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar5"
                    android:layout_width="425dp"
                    android:layout_height="90dp"
                    android:background="?attr/colorPrimary"
                    android:minHeight="?attr/actionBarSize"
                    android:theme="?attr/actionBarTheme" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginLeft="113dp"
                    android:layout_marginTop="-70dp"
                    android:fontFamily="sans-serif-condensed"
                    android:gravity="center|top"
                    android:text="Training Details"
                    android:textColor="#FFFFFF"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="250dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="80dp"
                    android:layout_marginTop="50dp"
                    android:background="#523D8B91"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Offer Information"
                    android:textSize="20sp"
                    android:textStyle="bold|italic" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="85dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="80dp"
                        android:fontFamily="sans-serif-condensed-light"
                        android:text="Offer Name:"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/Name_offer"
                        android:layout_width="200dp"
                        android:layout_height="30dp"
                        android:fontFamily="sans-serif-condensed-light"
                        android:text=""
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/national"
                        android:layout_width="80dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="80dp"
                        android:fontFamily="sans-serif-condensed-light"
                        android:text="Nationality:"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/Nationality"
                        android:layout_width="160dp"
                        android:layout_height="30dp"
                        android:fontFamily="sans-serif-condensed-light"
                        android:text=""
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/gpa"
                        android:layout_width="100dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="80dp"
                        android:fontFamily="sans-serif-condensed-light"
                        android:text="Required GPA:"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/GPA_offer"
                        android:layout_width="140dp"
                        android:layout_height="30dp"
                        android:fontFamily="sans-serif-condensed-light"
                        android:text=""
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView0"
                        android:layout_width="38dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="80dp"
                        android:fontFamily="sans-serif-condensed-light"
                        android:text="City:"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/city"
                        android:layout_width="200dp"
                        android:layout_height="30dp"
                        android:fontFamily="sans-serif-condensed-light"
                        android:text=""
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvOfferDe"
                    android:layout_width="250dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="80dp"
                    android:layout_marginTop="20dp"
                    android:background="#523D8B91"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Offer Duration"
                    android:textSize="20sp"
                    android:textStyle="bold|italic" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvstart"
                        android:layout_width="85dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="80dp"
                        android:fontFamily="sans-serif-condensed-light"
                        android:text="Start Data:"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/start_D"
                        android:layout_width="160dp"
                        android:layout_height="30dp"
                        android:fontFamily="sans-serif-condensed-light"
                        android:text=""
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvend"
                        android:layout_width="85dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="80dp"
                        android:fontFamily="sans-serif-condensed-light"
                        android:text="End Data:"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/End_Date"
                        android:layout_width="160dp"
                        android:layout_height="30dp"
                        android:fontFamily="sans-serif-condensed-light"
                        android:text=""
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <TextView
                    android:id="@+id/offerDes"
                    android:layout_width="250dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="80dp"
                    android:layout_marginTop="10dp"
                    android:background="#523D8B91"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Offer Description"
                    android:textSize="20sp"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@+id/textDescription"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80dp"
                    android:fontFamily="sans-serif-condensed-light"
                    android:text=""
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvmajor"
                    android:layout_width="250dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="80dp"
                    android:layout_marginTop="50dp"
                    android:background="#523D8B91"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Major"
                    android:textSize="20sp"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@+id/major_offer"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80dp"
                    android:fontFamily="sans-serif-condensed-light"
                    android:text=""
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvMajor"
                    android:layout_width="250dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="80dp"
                    android:layout_marginTop="40dp"
                    android:background="#523D8B91"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Benefits"
                    android:textSize="20sp"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@+id/benefites"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80dp"
                    android:fontFamily="sans-serif-condensed-light"
                    android:text=""
                    android:textSize="16sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/tvel"
                    android:layout_width="250dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="80dp"
                    android:layout_marginTop="40dp"
                    android:background="#523D8B91"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Eligibility"
                    android:textSize="20sp"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@+id/tvEligibility"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80dp"
                    android:fontFamily="sans-serif-condensed-light"
                    android:text=""
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/link"
                    android:layout_width="250dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="80dp"
                    android:layout_marginTop="40dp"
                    android:background="#523D8B91"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Link"
                    android:textSize="20sp"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@+id/tvlink"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80dp"
                    android:layout_marginBottom="60dp"
                    android:fontFamily="sans-serif-condensed-light"
                    android:text=""
                    android:textColor="@android:color/system_accent1_400"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </ScrollView>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>